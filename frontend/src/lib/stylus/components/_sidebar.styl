@import '../main.styl'

.vi-sidebar
  width 70px
  color $mild-grey
  background white
  border-right 1px solid $border-color
  padding 20px 0
  position relative

  &__item
    width inherit
    height 60px
    display flex
    align-items center
    justify-content center
    cursor pointer
    transition $transition
    position relative

    &--selected
      color $brand
      transition none

    &--link-active
      color $brand

      &:before
        content: ''
        display block
        position absolute
        top 7px
        bottom 7px
        right 0
        background $brand
        width 2px

    .vi-icon
      width 36px
      height 36px

  &__content
    background white
    padding 40px 30px
    box-shadow 7px 4px 20px -4px rgba(0,0,0,0.25)
    position absolute
    z-index 10
    left 70px
    top 0
    min-height 100%
    width 190px

  &__title
    title 14px
    margin-bottom 20px

  &__list-item
    padding 15px 0
    line-height 1.4
    cursor pointer
    padding-left 18px
    position relative
    transition $transition
    font-size 14px

    &--active-link
      color $brand

    &:before
      content: ''
      display block
      width 6px
      height 6px
      background $dark-grey
      border-radius 6px
      position absolute
      left 0
      top 24px

    &:hover
      color $brand
