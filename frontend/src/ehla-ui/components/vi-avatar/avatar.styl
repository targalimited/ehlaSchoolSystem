@import '../../stylus/settings.styl'

.vi-avatar
  align-items: center
  border-radius: 50%
  display: inline-flex
  justify-content: center
  position: relative
  text-align: center
  vertical-align: middle
  background $bg-color
  width 50px
  height 50px

  for color_name, color_value in $colors

    &.vi-avatar--{color_name}
      background-color color_value
      color white

      &:before
        display none

  &__border
    z-index 0
    position absolute
    border: 1px solid $border-color-1
    border-radius: 50%
    height: inherit
    width: inherit
    display block
    top 0
    left 0

  img,
  .vi-avatar__img
    border-radius: 50%
    height: inherit
    width: inherit
    background-size cover
