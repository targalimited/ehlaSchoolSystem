@import '../../stylus/settings.styl'

.vi-checkbox
  display block
  user-select none
  font-size 14px
  height 18px
  width 18px

  &--inline
    display inline
    &:not(:first-child)
      margin-left 16px

  &--disabled
    cursor no-drop
    opacity 0.3

  &--active
    color $brand

  &__main
    cursor pointer
    display inline-flex
    align-items center

    .vi-checkbox--disabled &
      cursor no-drop

  &__label
    margin-left 8px

  &__icon
    width 18px
    height @width
